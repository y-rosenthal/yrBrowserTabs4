
{
  "manifest_version": 3,
  "name": "TabMaster AI",
  "version": "1.0",
  "description": "AI-powered tab manager for Chrome",
  "permissions": [
    "tabs",
    "windows",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TabMaster AI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
